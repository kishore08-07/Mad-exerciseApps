<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginVertical="50sp"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="129dp"
        android:layout_height="35dp"
        android:layout_marginBottom="30dp"
        android:background="#0000FF"
        android:text="MAD Exercises"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Ex1Temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ex 1.1 Temp" />

    <Button
        android:id="@+id/Ex1Emoji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ex 1.2 Emoji" />

    <Button
        android:id="@+id/Ex2Linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ex 2.1.1 Linear" />

    <Button
        android:id="@+id/Ex2Relative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ex 2.1.2 Relative" />

    <Button
        android:id="@+id/Ex2Feedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ex 2.2 Feedback" />

    <Button
        android:id="@+id/Ex2Calci"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ex 2.3 Calci" />


</LinearLayout>
